<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="06_renameQuestionDifficultyColumn" author="Alexandru Botez" >
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="question"/>
                <columnExists tableName="question" columnName="difficultly"/>
            </and>
        </preConditions>
        <renameColumn
                       newColumnName="difficulty"
                       oldColumnName="difficultly"
                       tableName="question"/>
    </changeSet>
</databaseChangeLog>