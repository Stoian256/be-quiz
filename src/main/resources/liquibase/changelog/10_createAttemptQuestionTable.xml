<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="10_createAttemptQuestionTable" author="Silviu Stoian">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="attempt_question"/>
            </not>
        </preConditions>
        <createTable tableName="attempt_question">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="question_title" type="varchar(255)"/>
            <column name="question_body" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>