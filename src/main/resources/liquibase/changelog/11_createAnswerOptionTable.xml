<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="11_createAnswerOptionTable" author="Silviu Stoian">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="answer_option"/>
            </not>
        </preConditions>
        <createTable tableName="answer_option">
            <column name="answer_option_id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="answer_option_content" type="text"/>
            <column name="attempt_question_id" type="uuid"/>
        </createTable>
    </changeSet>
    <changeSet  author="Silviu Stoian"  id="addFK_attempt_question_answer_option">
        <addForeignKeyConstraint  baseColumnNames="attempt_question_id"
                                  baseTableName="answer_option"
                                  constraintName="FK_attempt_question_answer_option"
                                  referencedColumnNames="id"
                                  referencedTableName="attempt_question"
                                  onDelete="CASCADE"
        />
    </changeSet>
</databaseChangeLog>