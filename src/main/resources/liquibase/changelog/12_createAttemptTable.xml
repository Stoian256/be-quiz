<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="12_createAttemptTable" author="Silviu Stoian">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="attempt"/>
            </not>
        </preConditions>
        <createTable tableName="attempt">
            <column name="attempt_id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="varchar(255)"/>
            <column name="started_at" type="timestamp"/>
            <column name="time_limit_minutes" type="int"/>
        </createTable>
    </changeSet>
</databaseChangeLog>