<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="15_updateAttemptQuestionColumns" author="Silviu Stoian" >
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="attempt_question"/>
                <not>
                    <columnExists tableName="attempt_question" columnName="difficulty"/>
                </not>
            </and>
        </preConditions>
        <addColumn tableName="attempt_question">
            <column name="difficulty" type="smallint"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>